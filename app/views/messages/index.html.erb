<div class="panel panel-default">
	<div class="panel-heading">
		メッセージ一覧
	</div>
	
	<div class="panel-body">	
		<!--インスタンス変数@messagesで★★★messageを繰り返す-->
		<% @messages.each do |message| %>
			<span class="label label-info"><%= message.name %></span> <!--名前-->
			<%= message.body %> <!--内容-->
			<br>
		<% end %>
	</div>
</div>

<!--5-4フォームヘルパによってモデルオブジェクトとフォームを関連づけ
フォームで入力した値をモデルオブジェクトに割当てる-->
<!--引数@messageにMessagesControllerのindexアクションでMessage.newの代入する-->
<%= form_for (@message) do |f| %>
	名前:
	<%= f.text_field :name %>
	
	内容:
	<%= f.text_area :body :size => "20×50" %>
	<%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>