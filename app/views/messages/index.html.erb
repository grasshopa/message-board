<div class="panel panel-default">
	<div class="panel-heading">
		メッセージ一覧
	</div>
	
	<div class="panel-body">	
		<!--インスタンス変数@messagesで★★★messageを繰り返す-->
		<% @messages.each do |message| %>
			<span class="label label-info"><%= message.name %></span> <!--名前-->
			<%= message.body %> <!--内容-->
			<!--link_toメソッド ※link_toの第1引数→ラベル 、edit〜→編集ページのパス-->
			(<%= link_to "edit" , edit_message_path(message) %>
			<%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもいいですか？' } %>
			)
			<br>
		<% end %>
	</div>
</div>


<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>