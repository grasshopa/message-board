<!--5-4フォームヘルパによってモデルオブジェクトとフォームを関連づけ
フォームで入力した値をモデルオブジェクトに割当てる-->
<!--引数@messageにMessagesControllerのindexアクションでMessage.newの代入する-->
<%= form_for(@message , html: {class: "form-horizontal"}) do |f| %>
	<% if @message.errors.present? %>
		<div class="alert alert-danger">
		  	<% alert %>
			<ul>
				<% @message.errors.full_messages.each do |full_message| %>
					<li>
						<%= full_message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

<div class="form-horizontal">
	<div class="form-group">
		<label class="col-sm-1 control-label">名前:</label>
		<div class="col-sm-4"><%= f.text_field :name, :class => "form-control" %></div>
	</div>
	
	<div class="form-group">
		<label class="col-sm-1 control-label">年齢:</label>
		<div class="col-sm-1"><%= f.text_field :age, :class => "form-control" %></div>
	</div>
	
	<div class="form-group">		
		<label class="col-sm-1 control-label">内容:</label>
		<div class="col-sm-11"><%= f.text_area :body, :class => "form-control" %></div>
	</div>
	
	<div class="col-sm-12 center-block form-group">
		<%= f.submit class: "btn btn-sm btn-primary col-sm-2 col-sm-offset-5" %>
	</div>
</div>
<% end %>